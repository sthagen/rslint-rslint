{
  "name": "vscode-rslint",
  "description": "Visual Studio Code client for the rslint language server",
  "version": "0.0.1",
  "license": "MIT",
  "author": {
    "name": "Darin Morrison",
    "email": "darinmorrison@users.noreply.github.com",
    "url": "https://github.com/rslint/rslint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rslint/rslint.git"
  },
  "displayName": "vscode-rslint",
  "publisher": "darinmorrison",
  "engines": {
    "vscode": "^1.43.0"
  },
  "scripts": {
    "build": "tsc -p .",
    "format": "prettier --write '**/*.{js,json,ts,tsx,yml,yaml}'",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "@types/vscode": "^1.49.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "vscode-languageclient": "^6.1.3"
  },
  "enableProposedApi": true,
  "main": "./out/extension",
  "activationEvents": [
    "onLanguage:javascript",
    "workspaceContains:**/*.js",
    "workspaceContains:**/*.mjs"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "RSLint",
      "properties": {
        "vscode-rslint.incorrectFileAutofixes": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Whether to offer autofix actions even if the file contains syntax errors, may sometimes cause incorrect fixes"
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "rslintrc.json",
        "url": "./schema.json"
      }
    ]
  }
}
